<section class="initial-card p-5 rounded">
  <h1 class="initial-title mb-3">Login</h1> 
  <%= form_tag "/login" do %>
    <div class="field mb-4">
      <%= label_tag :username %>
      <%= text_field_tag :username %>
    </div>
    <div class="actions">
      <%= submit_tag "Login", class: "btn btn-primary mb-2" %>
    </div>
  <% end %>
  <%= button_to "Back", root_url, method: :get, class: "btn btn-secondary" %>
</section>
